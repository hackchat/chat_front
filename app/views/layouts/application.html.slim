doctype
html
  head
    title Hackchat
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application", "#{FAYE_DOMAIN}/faye.js"
    = csrf_meta_tags
  body
    #current_user(user-token="#{current_user.user_token}" avatar="#{current_user.avatar}" name="#{current_user.first_name} #{current_user.last_name[0]}.")
    #faye_server(faye-address="#{FAYE_DOMAIN}")
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid#navbar-container
          .brand
            = image_tag "https://dl.dropbox.com/u/71404227/HackChatLogo.gif", class: "logo"
          a.pull-right.btn.btn-info.logout href="#{LOGIN_URL}logout"Logout
    #broadcast.navbar.navbar-fixed-top.hide
    .container
      = yield